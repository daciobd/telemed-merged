datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ExternalEvent {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  status    String   @default("received")
  createdAt DateTime @default(now())
}

model Appointment {
  id          String   @id @default(cuid())
  patientId   String?
  physicianId String?
  startsAt    DateTime?
  status      String   @default("scheduled")
  origin      String   @default("auction")
  bidId       String?
  createdAt   DateTime @default(now())
  @@index([bidId])
}

model Physician {
  id            String   @id               // ex.: "SP-123456" (UF-CRM)
  name          String?
  uf            String?
  crm           String?
  specialty     String?
  availableNow  Boolean  @default(true)
  createdAt     DateTime @default(now())

  @@index([specialty])
}

model AuditLog {
  id        String   @id @default(cuid())
  traceId   String   // Para correlacionar eventos
  eventType String   // signup_attempt, consult_request_created, etc.
  category  String   // auth, consultation, ai, system, feedback
  level     String   @default("INFO")  // INFO, WARN, ERROR
  userId    String?  // ID do usuário (opcional)
  sessionId String?  // ID da sessão (opcional)
  payload   Json     // Dados do evento (sanitizados)
  userAgent String?  // Browser/dispositivo
  ipHash    String?  // Hash do IP (não o IP real)
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("NOW() + INTERVAL '30 days'"))  // Auto-expiração

  @@index([traceId])
  @@index([eventType])
  @@index([category])
  @@index([createdAt])
  @@index([expiresAt])
}
