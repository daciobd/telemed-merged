# Server Configuration
PORT=5000
NODE_ENV=development

# Authentication & Security
JWT_SECRET=change-me
INTERNAL_TOKEN=change-me-internal

# OpenAI Integration
OPENAI_API_KEY=
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_LLM_MODEL=gpt-4o-mini
DR_AI_ENABLED=0

# Frontend API URLs (Vite)
VITE_AUCTION_URL=https://telemed-auction.onrender.com
VITE_PRODUCTIVITY_URL=https://telemed-productivity.onrender.com

# Service Names (optional, defaults provided)
SERVICE_NAME=telemed-internal

# Security & Privacy
IP_SALT=your-custom-salt-for-ip-hashing

# Debug Flags (development only)
DEBUG_RC_TOKEN=0

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/telemed

# Additional service-specific variables
# Add here any other environment variables your services need